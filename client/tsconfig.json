{
  "compilerOptions": {
    "rootDir": ".",
    "module": "commonjs",
    "target": "ES2020",
    "sourceMap": true,
    "isolatedModules": true,
    "strict": true,
    "types": [
      "vite/client"
    ],
    "baseUrl": ".",
    "paths": {
      "@api/api": [
        "./node_modules/@api/api"
      ]
    }
  },
  "files": [
    "node_modules/@api/api/api.ts"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
